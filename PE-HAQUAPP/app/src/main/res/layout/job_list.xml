<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/workItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="workSelect">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controller.Joblist_Activity">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/workName"
            android:text="Name"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="50sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/datumContent"
            app:layout_constraintTop_toBottomOf="@+id/workName"
            android:textSize="30sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/workAddress"
            app:layout_constraintTop_toBottomOf="@id/datumContent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:textSize="30sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>